@{
    ViewData["Title"] = "Category";
}

<div class="card bg-light-info shadow-none position-relative overflow-hidden">
    <div class="card-body px-4 py-3">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-8">Category</h4>
            </div>
            <div class="col-3">
                <div class="text-center mb-n5">
                    <img src="~/Template/dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="action-btn layout-top-spacing mb-7 d-flex align-items-center justify-content-between">
    <div class="mb-0 fs-5">
        <form class="position-relative">
            <input type="text" class="form-control search-chat py-2 ps-5" id="searchInput"
                placeholder="Search category">
            <i class="ti ti-search position-absolute top-50 start-0 translate-middle-y fs-6 text-dark ms-3"></i>
        </form>
    </div>
    <button type="button" class="btn btn-primary btn-add" onclick="ShowAddCategoryModal()">Add category</button>
</div>

<div id="category-list-container">

</div>

<div id="modal-Container">

</div>

<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Add Category</h5>
            </div>
            <form>
                <div class="modal-body">
                    <div class="form-group mb-4">
                        <label class="mb-2 fw-semibold" for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                        <span id="nameError" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2 fw-semibold" for="description">Description</label>
                        <textarea class="form-control" rows="4" id="description" name="description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        onclick="CloseModal('addCategoryModal')">Close</button>
                    <button type="button" class="btn btn-primary" onclick="CreateCategory()">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            $("#addCategoryModal").on("hidden.bs.modal", function () {
                $(this).find("form")[0].reset();
                $("#preview").attr("src", "").hide();
                document.getElementById("fileHelp").textContent = "";
            });

            GetAllCategories();
        });
    </script>
}