<div class="modal-header">
    <h5 class="modal-title">Add new category</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="compose-box">
        <div class="compose-content mb-3">
            <form asp-action="Create" method="post" id="createCategoryForm">
                <div class="col-md-12 mb-3">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="name" class="form-control"/>
                    <span class="text-danger" id="NameError" style="display: none;">Name is required</span>
                </div>
                <div class="col-md-12 mb-3">
                    <label for="Description">Description</label>
                    <textarea id="Description" name="description" class="form-control" rows="3"></textarea>
                </div>
                <div>
                    <button type="button" class="btn btn-primary" id="createCategoryBtn">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
