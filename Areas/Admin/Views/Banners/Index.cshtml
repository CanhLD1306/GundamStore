<div class="modal fade" id="addBannerModal" tabindex="-1" role="dialog" aria-labelledby="addBannerModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title add-banner-title" id="addListModalTitleLabel1">Add Banner</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="compose-box">
                    <div class="compose-content mb-3" id="addListModalTitle">
                        <form method="post" action="@Url.Action("CreateBanner", "Banner")" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-12 mb-3 d-flex justify-content-center">
                                    <img id="imagePreview" src="#" alt="Image Preview" style="display:none; max-width: 100%; height: 100%;">
                                </div>
                                <div class="col-md-12 mb-3">
                                    <input id="fileImage" type="file" class="form-control" name="FileImage" accept="image/*">
                                </div>
                                <div class="col-md-12">
                                    <textarea id="bannerDescription" class="form-control" rows="3" name="Description" placeholder="Enter description"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="submit" class="btn add-banner btn-primary" id="saveBannerBtn">Save</button>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const addButton = document.getElementById('add-banner');
        const addBannerModal = new bootstrap.Modal(document.getElementById('addBannerModal'));
        const addBannerFormButton = document.querySelector('.modal-footer .btn-primary');
        const fileInput = document.getElementById('fileImage');
        const imagePreview = document.getElementById('imagePreview');



        addButton.addEventListener('click', function () {
            addBannerModal.show();
        });

        addBannerFormButton.addEventListener('click', function () {
            addBannerModal.hide();
        });

        fileInput.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = 'block'; 
                }
                reader.readAsDataURL(file);
            } else {
                imagePreview.src = '#';
                imagePreview.style.display = 'none';
            }
        });

        document.getElementById('addBannerModal').addEventListener('hidden.bs.modal', function () {
            bannerForm.reset();
            imagePreview.src = '#';
            imagePreview.style.display = 'none';
        });
    });
</script>