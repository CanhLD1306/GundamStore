@{
    ViewData["Title"] = "Scales";
}

<div class="card bg-light-info shadow-none position-relative overflow-hidden">
    <div class="card-body px-4 py-3">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-8">Scale</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a class="text-muted "
                                href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">
                            Scale
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="col-3">
                <div class="text-center mb-n5">
                    <img src="~/Template/dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-list">
    <div class="d-flex justify-content-between align-items-center mb-9">
        <form class="position-relative">
            <input type="text" class="form-control search-chat py-2 ps-5" id="text-srh"
                placeholder="Search scale">
            <i class="ti ti-search position-absolute top-50 start-0 translate-middle-y fs-6 text-dark ms-3"></i>
        </form>
    </div>
    <div class="table-responsive border rounded">
        <table class="table align-middle text-nowrap mb-0">
            <thead>
                <tr>
                    <th scope="col"><h6 class="fs-3 fw-semibold mb-0">Scales</h6></th>
                    <th scope="col"><h6 class="fs-3 fw-semibold mb-0">Description</h6></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>