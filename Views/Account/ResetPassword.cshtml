@using GundamStore.ViewModels;
@model GundamStore.ViewModels.NewPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LoginOrRegisterLayout.cshtml";
    var mode = Context.Request.Query["mode"].ToString();
}

<div class="card-body">
    <div class="text-nowrap logo-img text-center d-block mb-5 w-100">
        <img src="~/Template/dist/images/logos/logo.png" width="70" alt="">
    </div>
    <form asp-action="ResetPassword" method="post">
        <div class="mb-3">
            <label for="Password" class="form-label">New password</label>
            <input name="Password" type="password" class="form-control">
        </div>
        <div class="mb-4">
            <label for="ConfirmPassword" class="form-label">Confirm password</label>
            <input type="password" name="ConfirmPassword" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary w-100 py-8 rounded-2">Save</button>
        
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            var errorMessage = '@TempData["ErrorMessage"]';
            var successmessage = '@TempData["SuccessMessage"]';
            if (errorMessage) {
                toastr.options = {
                    "positionClass": "toast-top-center", 
                    "timeOut": 5000,                   
                    "showMethod": "slideDown",                    
                };
                toastr.error(errorMessage);
                @TempData.Remove("ErrorMessage");
            }
            if (successmessage) {
                toastr.options = {
                    "positionClass": "toast-top-center", 
                    "timeOut": 5000,                   
                    "showMethod": "slideDown",                    
                };
                toastr.success(successmessage);
                @TempData.Remove("SuccessMessage");
            }
        });
    </script>
}