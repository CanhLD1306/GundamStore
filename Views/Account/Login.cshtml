@using GundamStore.ViewModels;
@model GundamStore.ViewModels.LoginViewModel


@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginOrRegisterLayout.cshtml";
}

<div class="card-body">
    <div class="text-nowrap logo-img text-center d-block mb-5 w-100">
        <img src="~/Template/dist/images/logos/logo.png" width="70" alt="">
    </div>
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label for="Email" class="form-label">Username</label>
            <input asp-for="Email" type="email" class="form-control">
        </div>
        <div class="mb-4">
            <label for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="form-check">
                <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
                <label class="form-check-label text-dark" for="flexCheckChecked">
                    Remember me
                </label>
            </div>
            <a class="text-primary fw-medium" href="@Url.Action("SendEmail", "Account")">Forgot Password ?</a>
        </div>
        
        <button type="submit" class="btn btn-primary w-100 py-8 rounded-2">Sign In</button>
        
        <div class="position-relative text-center my-2">
            <p class="mb-0 fs-4 px-3 d-inline-block bg-white text-dark z-index-5 position-relative">Or</p>
            <span class="border-top w-100 position-absolute top-50 start-50 translate-middle"></span>
        </div>
        <div class="mb-2 mb-sm-0">
            <a href="@Url.Action("GoogleLogin", "Account")" class="btn btn-white text-dark border fw-normal d-flex align-items-center justify-content-center rounded-2 py-8">
                <img src="~/Template/dist/images/svgs/google-icon.svg" alt="" class="img-fluid me-2" width="18"
                    height="18">
                <span class="d-none d-sm-block me-1 flex-shrink-0">Sign in with</span>Google
            </a>
        </div>
        <div class="d-flex align-items-center justify-content-center mt-4">
            <p class="mb-0 fw-medium">Don't have an account yet?</p>
            <a class="text-primary fw-medium ms-2" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
